<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a3342"
    tools:context=".Calculadora"
    tools:layout_editor_absoluteX="17dp"
    tools:layout_editor_absoluteY="126dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/titulo"
        android:text="CALCULADORA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/tituloVisor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSoma"
        android:layout_marginTop="64dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/btnSubtracao"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        style="@style/btnOperacao" />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginStart="68dp"
        android:text="ADIÇÃO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSoma"
        style="@style/labelOperacao" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubtracao"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        style="@style/btnOperacao" />

    <TextView
        android:id="@+id/textView4"
        android:text="SUBTRAÇÃO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/btnSubtracao"
        style="@style/labelOperacao" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMultiplicacao"
        android:layout_marginTop="48dp"
        android:text="x"
        app:layout_constraintEnd_toStartOf="@+id/btnDivisao"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        style="@style/btnOperacao" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginStart="24dp"
        android:text="MULTIPLICAÇÃO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacao"
        style="@style/labelOperacao" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDivisao"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        style="@style/btnOperacao" />

    <TextView
        android:id="@+id/textView6"
        android:text="DIVISÃO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/btnDivisao"
        style="@style/labelOperacao" />

</androidx.constraintlayout.widget.ConstraintLayout>